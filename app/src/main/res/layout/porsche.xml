<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/porsche_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aa000000">

    <com.zhou.test.view.FrameAnimation
        android:id="@+id/car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/car_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="80dp"
            android:src="@drawable/sports_car_12"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <com.zhou.test.view.FrameAnimation
            android:id="@+id/windows"
            android:layout_width="333dp"
            android:layout_height="282dp"
            android:layout_marginBottom="-13dp"
            android:layout_alignBottom="@id/car_last"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/car_last"
            android:layout_centerInParent="true"
            android:src="@drawable/sports_car_door"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignBottom="@id/car_last"
            android:paddingRight="-5dp"
            android:paddingTop="-15dp"
            android:src="@drawable/sports_car_light"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>
